{
  "name": "__MSG_appName__",
  "version": "__VERSION__",
  "manifest_version": 3,
  "description": "__MSG_appDesc__",
  "short_name": "Unikey",
  "default_locale": "vi",
  "author": "Lê Quốc Tuấn <mr.lequoctuan@gmail.com>",
  "background":  {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "input",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "input_components": [
    {
      "name": "Vietnamese - Unikey (Telex)",
      "type": "ime",
      "id": "unikey-telex",
      "description": "Telex input style",
      "language": "vi",
      "layouts": []
    },
    {
      "name": "Vietnamese - Unikey (Telex - Simple)",
      "type": "ime",
      "id": "unikey-telex-simple",
      "description": "Simple Telex input style",
      "language": "vi",
      "layouts": []
    },
    {
      "name": "Vietnamese - Unikey (VNI)",
      "type": "ime",
      "id": "unikey-vni",
      "description": "VNI input style",
      "language": "vi",
      "layouts": []
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
